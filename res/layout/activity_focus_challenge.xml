<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/focus_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    android:padding="24dp" >

    <!-- Spinner to select time -->

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#B2DFDB"
        android:padding="8dp" />

    <!-- Start Button -->

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_spinner"
        android:layout_marginTop="20dp"
        android:background="#00796B"
        android:text="Start Focus Timer"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Timer Text Display -->

    <TextView
        android:id="@+id/timer_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="00:00"
        android:textColor="#004D40"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Motivational Quote -->

    <TextView
        android:id="@+id/quote_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_display"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Stay focused, you&apos;re doing great!"
        android:textColor="#00695C"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

</RelativeLayout>